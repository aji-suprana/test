{
    "requiresCompatibilities": [
        "EC2"
    ],
    "inferenceAccelerators": [],
    "containerDefinitions": [
        {
            "name": "db",
            "image": "058434268238.dkr.ecr.ap-southeast-1.amazonaws.com/upmesh-backend:db",
            "hostname": "db",
            "memory": 250,
            "cpu":256,
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/var/lib/mysql",
                    "sourceVolume": "efs"
                }
            ],
            "portMappings": [
                {
                    "containerPort": "3306",
                    "hostPort": "3306",
                    "protocol": "tcp"
                }
            
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ECS-cluster",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "db-prod"
                }
            }
        },
        {
            "name": "upmesh-backend-prod",
            "hostname": "upmesh-backend-prod",
            "image": "058434268238.dkr.ecr.ap-southeast-1.amazonaws.com/upmesh-backend:prod",
            "resourceRequirements": null,
            "essential": false,
            "memory":450,
            "cpu":512,
            "portMappings": [
                {
                    "containerPort": "1337",
                    "hostPort": "1337",
                    "protocol": "tcp"
                }
                
            ],
            "links": [
                "db"
            ],
            "environment": [
                {
                    "name": "WAIT_HOSTS",
                    "value": "db:3306"
                }
            ],
            "entryPoint": [
                "sh",
                "/usr/local/bin/entrypoint.sh"
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ECS-cluster",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "backend-dev"
                }
            }
        },
        {
            "name": "nginx",
            "image": "058434268238.dkr.ecr.ap-southeast-1.amazonaws.com/upmesh-backend:nginx",
            "resourceRequirements": null,
            "essential": false,
            "memory":150,
            "cpu":150,
            "portMappings": [
                {
                    "containerPort": "80",
                    "hostPort": "80",
                    "protocol": "tcp"
                },
                {
                    "containerPort": "443",
                    "hostPort": "443",
                    "protocol": "tcp"
                }
                
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ECS-cluster",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "nginx"
                }
            },
            "links": [
                "upmesh-backend-prod"
            ]
        }
    ],
    "volumes": [
        {
            "name": "efs",
            "efsVolumeConfiguration": {
                "fileSystemId": "fs-a13f07e0",
                "transitEncryption": "ENABLED"
            }
        }
    ],
    "networkMode": "bridge",
    "taskRoleArn": "",
    "family": "upmesh-backend-prod",
    "placementConstraints": []
}